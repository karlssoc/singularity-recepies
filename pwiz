Bootstrap: docker
From: bitnami/minideb:latest

%post
    apt-get -y update
    apt-get -y install install git wget build-essential libboost-all-dev


%environment
    export LC_ALL=C

 cd /usr/local/bin
    git clone https://github.com/ProteoWizard/pwiz.git
    cd DiaNN/pwiz 
    chmod +x quickbuild
    ./quickbuild.sh



%environment
    export LC_ALL=C
    export PATH=/usr/local/bin/pwiz
    
    
%runscript
exec "$@"`
